{
    "name": "anms/animal-nutrition-management-system",
    "description": "Modern Animal Nutrition Management System - A comprehensive platform for pet nutrition planning and health tracking",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "ANMS Development Team",
            "email": "dev@anms.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "vlucas/phpdotenv": "^5.5",
        "firebase/php-jwt": "^6.8",
        "respect/validation": "^2.2",
        "monolog/monolog": "^3.4",
        "league/container": "^4.2",
        "twig/twig": "^3.7",
        "intervention/image": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "mockery/mockery": "^1.6",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "fakerphp/faker": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Database\\": "database/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/",
        "analyse": "phpstan analyse src/ --level=8",
        "dev-setup": [
            "@composer install",
            "php database/migrate.php",
            "php database/seed.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}