# Application Configuration
APP_NAME="Animal Nutrition Management System"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_TIMEZONE=UTC

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=database
DB_PORT=3306
DB_DATABASE=anms_db
DB_USERNAME=anms_user
DB_PASSWORD=anms_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=3600
JWT_REFRESH_EXPIRY=604800

# Email Configuration
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@anms.com
MAIL_FROM_NAME="ANMS System"

# File Storage
STORAGE_DRIVER=local
STORAGE_PATH=storage/uploads
MAX_UPLOAD_SIZE=10485760

# External Services
OPENAI_API_KEY=
NUTRITION_API_KEY=

# Security
BCRYPT_ROUNDS=12
SESSION_LIFETIME=120
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=daily